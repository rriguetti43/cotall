<script>
    // Obtener la fecha actual
    const fechaHoy = new Date();

    // Formatear la fecha en formato YYYY-MM-DD
    const anio = fechaHoy.getFullYear();
    const mes = ("0" + (fechaHoy.getMonth() + 1)).slice(-2); // Los meses empiezan en 0, así que sumamos 1
    const dia = ("0" + fechaHoy.getDate()).slice(-2);

    // Crear la cadena de fecha en el formato YYYY-MM-DD
    const fechaFormateada = `${anio}-${mes}-${dia}`;

    document.getElementById("indimp").addEventListener("change", function () {
        const campoTexto = document.getElementById("mtoimp");
        campoTexto.disabled = !this.checked; // Habilita si está marcado, deshabilita si no

        document.getElementById("fechavig").disabled = true;
    });

    document.getElementById('imagen').addEventListener('change', function (event) {
        const file = event.target.files[0]; // Obtiene el archivo seleccionado

        if (file) {
            const reader = new FileReader(); // Crea un lector de archivos

            reader.onload = function (e) {
                const preview = document.getElementById('preview');
                preview.src = e.target.result; // Asigna la imagen cargada al src
                preview.classList.remove('d-none'); // Muestra la imagen
            };

            reader.readAsDataURL(file); // Lee el archivo como DataURL
        }
    });

    // Recibir el mensaje desde el servidor
    let mensaje = "<%= mensaje %>";
    let tipo = "<%= tipo %>";

    // Si hay un mensaje, mostrarlo con SweetAlert
    if (mensaje) {
        Swal.fire({
            title: tipo === "success" ? "Éxito" : "Error",
            text: mensaje,
            icon: tipo,
            confirmButtonText: "OK"
        });
    }
</script>